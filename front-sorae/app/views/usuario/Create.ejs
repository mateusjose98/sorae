<!DOCTYPE html>
<html lang="pt-br">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>SORAE | Consulta</title>

	<!-- Custom fonts for this template-->
	<link href="<%= process.env.SERVER_PREFIX %>/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
	<link
		href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
		rel="stylesheet">

	<!-- Custom styles for this template-->
	<link href="<%= process.env.SERVER_PREFIX %>/css/sb-admin-2.min.css" rel="stylesheet">

	<!-- Custom styles for this page -->
	<link href="<%= process.env.SERVER_PREFIX %>/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

	<!-- Page Wrapper -->
	<div id="wrapper">

		<!-- Menu -->
		<%- include ../template/menu.ejs %>

		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				<!-- Header -->
				<%- include ../template/topo.ejs %>

				<!-- Begin Page Content -->
				<div class="container-fluid">

					<!-- Page Heading -->
					<h1 class="h3 mb-4 text-gray-800">Cadastrar Usuário</h1>

					<div class="row">

						<!-- Earnings (Monthly) Card Example -->
						<div class="col-xl-12 col-md-12 mb-4">
							<div class="card border-left-warning shadow h-100 py-2">
								<div class="card-body">
									<div class="row no-gutters align-items-center">
										<div class="col mr-2">
											<form class="user" method="POST" action="<%= process.env.SERVER_PREFIX %>/app/<%= page %>/create/submit"
												enctype="multipart/form-data">
												<div class="form-group row">
													<div class="col-sm-4">
														Nome
														<input type="text" class="form-control" id="nome" name="nome"
															required>
													</div>
													<div class="col-sm-4">
														Username
														<input type="text" class="form-control" id="username"
															name="username">
													</div>
													<div class="col-sm-4">
														Senha
														<input type="password" minlength="3" class="form-control" id="password"
															name="password" required>
													</div>
												</div>
												<div class="form-group row">
													<div class="col-sm-4">
														Telefone
														<input type="phone" class="form-control" id="fone" name="fone">
													</div>
													<div class="col-sm-4">
														Email
														<input type="email" class="form-control" id="email"
															name="email">
													</div>
													<div class="col-sm-4">
														Unidade
														<input type="text" class="form-control" id="unidade"
															name="unidade">
													</div>
													<div class="col-sm-4">
														Empresa
														<input type="text" class="form-control" id="empresa"
															name="empresa">
													</div>
													<div class="col-sm-4">
														Imagem (até 200kb - apenas JPG)<br/>
														<input type="file" accept="image/jpg" name="photo">
													</div>
												</div>
												<div class="form-group row">
													<div class="col-sm-3">
														Ativo
														<select class="form-control" id="ativo" name="ativo">
															<option value="true">Sim</option>
															<option value="false">Não</option>
														</select>
													</div>		
													<div class="col-sm-3">
														Nível
														<select class="form-control" id="nivel" name="nivel">
															<option value="USUARIO">Usuário</option>
															<option value="ADMIN">Administrador</option>
															<option value="CONSULTA">Consulta</option>
															<option value="CREDENCIADA">Credenciada</option>
														</select>
													</div>											
												</div>
												<div class="form-group row">
													<div class="col-sm-4">
														<input type="submit" value="Salvar"
															class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" />
														<a href="<%= process.env.SERVER_PREFIX %>/app/<%= page %>/list"
															class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">Cancelar</a>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Rodapé -->
			<%- include ../template/rodape.ejs %>

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->

	<!-- Scroll to Top Button-->
	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	<!-- Logout Modal-->
	<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
		aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
					<button class="close" type="button" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
					<a class="btn btn-primary" href="login.html">Logout</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Bootstrap core JavaScript-->
	<script src="<%= process.env.SERVER_PREFIX %>/vendor/jquery/jquery.min.js"></script>
	<script src="<%= process.env.SERVER_PREFIX %>/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="<%= process.env.SERVER_PREFIX %>/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="<%= process.env.SERVER_PREFIX %>/js/sb-admin-2.min.js"></script>

	<!-- Page level plugins -->
	<script src="<%= process.env.SERVER_PREFIX %>/vendor/datatables/jquery.dataTables.min.js"></script>
	<script src="<%= process.env.SERVER_PREFIX %>/vendor/datatables/dataTables.bootstrap4.min.js"></script>

	<!-- Page level custom scripts -->
	<script src="<%= process.env.SERVER_PREFIX %>/js/demo/datatables-demo.js"></script>

</body>

</html>